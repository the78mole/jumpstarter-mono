{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    "group:monorepos"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ“¦ Renovate Dependency Dashboard",
  "prConcurrentLimit": 10,
  "branchConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "stabilityDays": 3,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "description": "Group Python dependencies",
      "matchManagers": ["pip_requirements", "pip_setup", "pipenv", "poetry"],
      "groupName": "python dependencies"
    },
    {
      "description": "Group Go dependencies",
      "matchManagers": ["gomod"],
      "groupName": "go dependencies"
    },
    {
      "description": "Group Rust dependencies",
      "matchManagers": ["cargo"],
      "groupName": "rust dependencies"
    },
    {
      "description": "Group Node.js dependencies",
      "matchManagers": ["npm", "pnpm"],
      "groupName": "nodejs dependencies"
    },
    {
      "description": "Group GitHub Actions",
      "matchManagers": ["github-actions"],
      "groupName": "github actions"
    },
    {
      "description": "Group pre-commit hooks",
      "matchManagers": ["pre-commit"],
      "groupName": "pre-commit hooks"
    },
    {
      "description": "Automerge patch updates for stable packages",
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0\\./",
      "automerge": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true
  }
}
